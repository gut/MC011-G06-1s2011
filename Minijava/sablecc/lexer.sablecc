Language lexer;

Lexer
	upper_case = 'A'..'Z';
	lower_case = 'a'..'z';
	letter = upper_case | lower_case;
	digit = '0'..'9';

	id = letter (letter | digit | '_')*;
	integer_literal = digit+;
	op = ('&&' | '<' | '+' | '-' | '*');

	tab = #9;
	eol = #13 | #10 | #13 #10;
	space = ' ';

	c_comment = '/*' Any* '*/';
	c_line_comment = Shortest '//' Any* eol;

	Token
		'if', 'else', 'while', id, integer_literal, op;

	Ignored
		c_comment, c_line_comment, space, tab, eol;


